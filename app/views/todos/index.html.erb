<p style="color: green"><%= notice %></p>

<% content_for :title, "Todos" %>

<h1>Todos</h1>

<div id="todos">
  <% @todos.each do |todo| %>
  <div class="todo-container">
    <%= render todo %>
    <%= link_to "Show this todo", todo %>
  </div>
  <% end %>
</div>

<%= link_to "New todo", new_todo_path %>
